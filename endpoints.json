{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a specific article object based on provided id",
    "parameters": ["article_id"],
    "exampleResponse": {
      "article_id": 1,
      "title": "Living in the shadow of a great man",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 100,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves comments for a specific article based on provided article id",
    "parameters": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "article_id": 7,
          "comment_id": 1,
          "author": "johnregex",
          "body": "everyone loves regex!",
          "created_at": "2023-05-12T17:19:32.423Z",
          "votes": 0
        },
        {
          "article_id": 7,
          "comment_id": 2,
          "author": "teddy",
          "body": "what's a regex?",
          "created_at": "2023-05-13T11:36:12.974Z",
          "votes": 10
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "post a comment for a specific article based on provided article id",
    "parameters": ["article_id", "new_comment"],
    "exampleResponse": {
      "comments": {
        "comment_id": 19,
        "votes": 0,
        "created_at": "2020-01-15T22:21:00.000Z",
        "author": "rogersop",
        "body": "You should probably shorten this article",
        "article_id": 2
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Update a comment with new votes value",
    "parameters": ["article_id", "inc_votes"],
    "exampleResponse": {
      "author": "butter_bridge",
      "title": "Living in the shadow of a great man",
      "article_id": 1,
      "topic": "mitch",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 90,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
      "body": "I find this existence challenging"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Delete specified comment",
    "parameters": ["comment_id"]
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "exampleResponse": [
      {
        "username": "coderdave",
        "name": "david",
        "avatar_url": "https://www.pngkit.com/png/full/326-3269436_haha-yes-really-really-like-this-image-hedgehog.png"
      }
    ]
  },
  "GET /api/users/:username": {
    "description": "serves information of specified user",
    "parameters": ["username"],
    "exampleResponse": {
      "username": "lurker",
      "name": "do_nothing",
      "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
    }
  }
}
